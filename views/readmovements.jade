extends ./layout.jade
script(src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous") 
block contenido
  <h1 class="centrado">OPERACIONES</h1>
  <h3 class="tit2">Nombre del grupo:</h3>
  h3(class="grupo")!=group
  a(href="/close" class="btncss btncrrsesion" role="button") Cerrar sesión
  a(href="/cmovement" class="btncss btncarga" role="button") Cargar operación
  img(src="/estatico/img/CASHIQ.png" alt="logo" class="imgMov")
  //h3 Mis Operaciones
  table(class="table")
    thead
      tr
        th(scope="col" class="tabHead") Fecha
        th(scope="col" class="tabHead") ID
        th(scope="col" class="tabHead") Username
        //th(scope="col" class="tabHead") Grupo
        th(scope="col" class="tabHead") Empresa
        th(scope="col" class="tabHead") Administrador
        th(scope="col" class="tabHead") Fondo
        th(scope="col" class="tabHead") Tipo Operación
        th(scope="col" class="tabHead") Importe     
    tbody(class="table-group-divider")
      for mov in movimientos
        tr(class="margindown")
          td(scope="row" class="padding_r divider tabHead")!=mov.fechaoperacion
          td(scope="row" class="padding_r divider tabHead")!=mov.idoperacion
          td(scope="row" class="padding_r divider tabHead"!=mov.username
          //td(scope="row" class="padding_r divider tabHead")!=mov.groupname
          td(scope="row" class="padding_r divider tabHead")!=mov.companyname
          td(scope="row" class="padding_r divider tabHead")!=mov.adminname
          td(scope="row" class="padding_r divider tabHead")!=mov.fondoname
          td(scope="row" class="padding_r divider tabHead")!=mov.tipooperacion
          td(scope="row" class="padding_r divider tabHead")!=mov.importe
          td
            a(href=`/umovement/${mov.idoperacion}` class=" btninline " role="button") Modificar
            a(onclick="show()" href=`/dmovement/${mov.idoperacion}` class=" btninline" role="button" id="btn") Eliminar
            //button(onclick="geek()" href=`/dmovement/${mov.idoperacion}` class=" btninline" role="button") Eliminar

      script.
        function show() {
          alert("Operacion eliminada")
        }     
    //-
