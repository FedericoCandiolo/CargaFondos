        function geek(){
          confirm( "Operacion eliminada"
            
          )
        }
      
    //-  script.
        function alert() {
            if (confirm("Operacion eliminado")){
              do $(mov.idoperacion)}
            else{
              event.preventDefault();
            }

            };
        };
      
