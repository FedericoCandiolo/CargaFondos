extends ./layout.jade
block contenido
  <h1 class="centrado">Listado de movimientos</h1>
  <p class="intro"> Usuario: </p>
  p!=user
  a(href="/close" class=" btn btn-primary btn-lg btncss btnubicacion " role="button") Cerrar sesión
  a(href="/cmovement" class=" btn btn-primary btn-lg btncss btnubicacion " role="button") Subir movimiento
  h3 Mis Movimientos
  table(class="tablacss")
    tr(class="header")
      th ID
      th Username
      th Grupo
      th Compañía
      th Administrador
      th Fondo
      th(class="padding_r") Tipo Operación
      th Importe
      th Fecha
    for mov in movimientos
      tr(class="margindown")
        td(class="padding_r")!=mov.idoperacion
        td(class="padding_r")!=mov.username
        td(class="padding_r")!=mov.groupname
        td(class="padding_r")!=mov.companyname
        td(class="padding_r")!=mov.adminname
        td(class="padding_r")!=mov.fondoname
        td(class="padding_r")!=mov.tipooperacion
        td(class="padding_r")!=mov.importe
        td(class="padding_r")!=mov.fechaoperacion
        td
          a(href=`/umovement/${mov.idoperacion}` class=" btninline " role="button") Modificar
          a(href=`/dmovement/${mov.idoperacion}` class=" btninline" role="button") Eliminar