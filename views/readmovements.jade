extends ./layout.jade
script(src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous") 
script(src="https://kit.fontawesome.com/d2631904d0.js" crossorigin="anonymous")
block contenido
  nav
    h1 OPERACIONES
    //- h1(class="centrado") OPERACIONES
    //- div(class="gruposmov")
    h1!=group
    //- h1(style="margin-top:40px")!=group
    div(class="block bghighlight")
      a(href="/close" class="btncss" role="button") Cerrar sesión
      a(href="/cmovement" class="btncss" role="button") Cargar operación
      //- a(href="/close" class="btncss btncrrsesion" role="button") Cerrar sesión
      //- a(href="/cmovement" class="btncss btncarga" role="button") Cargar operación
      
      img(src="/estatico/img/CASHIQ.png" alt="logo" class="imgMov")

  //- if mensaje != undefined
    div(class='cartel')
      h2 Cargando Movimiento
      p!=mensaje
  div
    table(class="table")
      thead
        tr
          th(scope="col" class="tabHead") Fecha
          th(scope="col" class="tabHead hide1") ID
          th(scope="col" class="tabHead hide1") Username
          th(scope="col" class="tabHead hide1") Grupo
          th(scope="col" class="tabHead") Empresa
          th(scope="col" class="tabHead") Administrador
          th(scope="col" class="tabHead") Fondo
          th(scope="col" class="tabHead") Tipo Operación
          th(scope="col" class="tabHead") Importe     
      tbody(class="table-group-divider")
        for mov in movimientos
          tr(class="margindown")
            td(scope="row" class="padding_r divider tabHead" style="width=10px")!=mov.fechaoperacion
            td(scope="row" class="padding_r divider tabHead hide1")!=mov.idoperacion
            td(scope="row" class="padding_r divider tabHead hide1")!=mov.username
            td(scope="row" class="padding_r divider tabHead hide1")!=mov.groupname
            td(scope="row" class="padding_r divider tabHead")!=mov.companyname
            td(scope="row" class="padding_r divider tabHead")!=mov.adminname
            td(scope="row" class="padding_r divider tabHead")!=mov.fondoname
            td(scope="row" class="padding_r divider tabHead")!=mov.tipooperacion
            td(scope="row" class="padding_r divider tabHead")!=mov.importe
            td
              div(style="display: inline-flex; gap: 1em;")
                a(href=`/umovement/${mov.idoperacion}` role="button") 
                                  <svg role="button"  xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="20px" height="20px" color=red><path d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.8 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160V416c0 53 43 96 96 96H352c53 0 96-43 96-96V320c0-17.7-14.3-32-32-32s-32 14.3-32 32v96c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H96z"/></svg>
                //-a(href=`/dmovement/${mov.idoperacion}` onclick=`EliminarMovimiento('${mov.fechaoperacion}','/dmovement/${mov.idoperacion}')` role="button")
                a(onclick=`EliminarMovimiento('${mov.fechaoperacion} del fondo: ${mov.fondoname} con un importe total de: ${mov.importe}','/dmovement/${mov.idoperacion}')` role="button")
                                  <svg role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" width="20px" height="20px" fill="darkred"><path d="M135.2 17.7C140.6 6.8 151.7 0 163.8 0H284.2c12.1 0 23.2 6.8 28.6 17.7L320 32h96c17.7 0 32 14.3 32 32s-14.3 32-32 32H32C14.3 96 0 81.7 0 64S14.3 32 32 32h96l7.2-14.3zM32 128H416V448c0 35.3-28.7 64-64 64H96c-35.3 0-64-28.7-64-64V128zm96 64c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16zm96 0c-8.8 0-16 7.2-16 16V432c0 8.8 7.2 16 16 16s16-7.2 16-16V208c0-8.8-7.2-16-16-16z"/></svg>                         
  footer(class="toright")
    p(class="user") User:
    p(class="user")!=user

  script(src="estatico/confirm.js")